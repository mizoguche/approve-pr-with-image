{
  "name": "Approve Pull Request with image",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Chrome extension to approve pull request with LGTM image",
  "homepage_url": "https://github.com/mizoguche/approve-pr-with-image",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "options_page": "dist/option.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "dist/browser_action.html"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "dist/inject.js"
      ]
    }
  ]
}
