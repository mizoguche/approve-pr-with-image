{
  "name": "approve-pr-with-image",
  "version": "0.0.3",
  "description": "Chrome extension to approve pull request with LGTM image",
  "main": "index.js",
  "dependencies": {
    "babel": "^6.5.2",
    "jquery": "^3.1.1",
    "material-design-lite": "^1.3.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.1.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "copy-webpack-plugin": "^4.0.1",
    "flow-bin": "^0.38.0",
    "webpack": "^1.14.0"
  },
  "scripts": {
    "webpack": "webpack",
    "build": "rm -rf dist build && mkdir dist && webpack && mkdir -p build/approve-pr-with-image && cp -r _locales/ dist icons manifest.json build/approve-pr-with-image/ && cd build && zip -r approve-pr-with-image.zip approve-pr-with-image",
    "flow":"flow; test $? -eq 0 -o $? -eq 2",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizoguche/approve-pr-with-image.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mizoguche/approve-pr-with-image/issues"
  },
  "homepage": "https://github.com/mizoguche/approve-pr-with-image",
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": true,
    "babel": "inherit"
  }
}
